<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
  <android.support.v7.widget.CardView
      android:id="@+id/card_view"
      android:layout_width="match_parent"
      android:layout_height="@dimen/card_height"
      android:layout_margin="@dimen/margin_xsmall"
      app:cardCornerRadius="@dimen/card_corner_radius"
      app:cardElevation="@dimen/card_elevation"
      app:cardPreventCornerOverlap="false"
      app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <RelativeLayout
          android:id="@+id/tutoItemContentLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="@dimen/margin_small">
        <RelativeLayout
            android:id="@+id/tutoItemPictureLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
          <ImageView
              android:id="@+id/tutoItemPictureImageView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/default_tuto"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tutoItemDescriptionLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/tutoItemPictureLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@id/tutoItemPictureLayout"
            android:layout_toRightOf="@id/tutoItemPictureLayout">
          <TextView
              android:id="@+id/tutoItemTitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:ellipsize="end"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="@dimen/text_size_medium"/>
          <TextView
              android:id="@+id/tutoItemDescription"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_alignParentBottom="true"
              android:layout_below="@+id/tutoItemTitle"
              android:ellipsize="end"
              android:textStyle="italic"
              android:textColor="@android:color/black"
              android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/tutoItemInfosLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_alignParentBottom="false"
          android:layout_below="@+id/tutoItemContentLayout"
          android:background="@color/light_blue">
        <LinearLayout
            android:id="@+id/tutoItemDifficultyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium">
        </LinearLayout>
      </RelativeLayout>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</RelativeLayout>